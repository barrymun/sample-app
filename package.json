{
  "name": "ssr",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces":[
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "client-dev": "yarn workspace ssr-client dev"
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx}": [
      "prettier --write 'client/src/**/*.{ts,tsx}'",
      "eslint --fix --config client/.eslintrc.json 'client/src/**/*.{ts,tsx}'"
    ],
    "server/src/**/*.ts": [
      "prettier --write server/src/**/*.ts",
      "eslint --fix --config server/.eslintrc.json server/src/**/*.ts"
    ],
    "shared/src/**/*.ts": [
      "prettier --write shared/src/**/*.ts",
      "eslint --fix --config shared/.eslintrc.json shared/src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  }
}
